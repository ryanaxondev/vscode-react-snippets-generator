    "prefix": "rcc",
    "body": [
      "import './${TM_FILENAME_BASE/(.*)/${1:/downcase}/}.css';",
      "",
      "const ${1:${TM_FILENAME_BASE/(?:^|[-_])([a-z])/${1:/upcase}/g}} = () => {",
      "  return (",
      "    <div className='${TM_FILENAME_BASE/(.*)/${1:/downcase}/}'>",
      "      ${0}",
      "    </div>",
      "  );",
      "};",
      "",
      "export default ${1};"
    ],
    "description": "Create a React component with CSS import"
  },

